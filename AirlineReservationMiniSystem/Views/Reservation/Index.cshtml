@model ReservationsViewModel

    <br />
    <div class="container row p-0 m-0">
        <div class="col-6">
            <h2 class="text-info">My Reservations</h2>
        </div>
        <div class="col-3 offset-3">
            <a asp-action="Index" asp-controller="Flight" class="btn btn-info form-control text-white">
                Search Flights
            </a>
        </div>
        <div class="col-12 border p-3">
            <form method="post">
                @if (Model.Reservations.Any())
                {
                    <table class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Reservation ID</th>
                                <th>Departure City</th>
                                <th>Destination City</th>
                                <th>Departure Time</th>
                                <th>Date of Reservation</th>
                                <th>Number of Connections</th>
                                <th>Reserved Seats</th>
                                <th>Status</th>
                            </tr>

                        </thead>
                        @foreach (var item in Model.Reservations)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.ReservationId)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Flight.DepartureCity)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Flight.DestinationCity)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Flight.DepartureDateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Flight.NumberOfConnections)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.NumberOfReservedSeats)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Status)
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <p>No Reservations available.</p>
                }
            </form>
        </div>
    </div>
