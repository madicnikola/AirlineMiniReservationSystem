@model Flight
@{
}

<br />
<h2 class="text-info">@(Model.FlightId != 0 ? "Edit" : "Create")</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.FlightId != 0)
        {
            <input type="hidden" asp-for="FlightId" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DepartureCity"></label>
            </div>
            <div class="col-3">
                <select asp-for="DepartureCity" class="browser-default custom-select mb-4" id="select">
                    <option value="" disabled="" selected="">From City/Airport</option>
                    <option value="0">BEOGRAD</option>
                    <option value="1">NIS</option>
                    <option value="2">KRALJEVO</option>
                    <option value="3">PRISTINA</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DestinationCity"></label>
            </div>
            <div class="col-3">
                <select asp-for="DestinationCity" class="browser-default custom-select mb-4" id="select">
                    <option value="" disabled="" selected="">To City/Airport</option>
                    <option value="0">BEOGRAD</option>
                    <option value="1">NIS</option>
                    <option value="2">KRALJEVO</option>
                    <option value="3">PRISTINA</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DepartureDateTime"></label>
            </div>
            <div class="col-6">
                <input asp-for="DepartureDateTime" class="form-control">
                <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="TotalNumberOfSeats"></label>
            </div>
            <div class="col-6">
                <input asp-for="TotalNumberOfSeats" class="form-control">
                <span asp-validation-for="TotalNumberOfSeats" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NumberOfFreeSeats"></label>
            </div>
            <div class="col-6">
                <input asp-for="NumberOfFreeSeats" class="form-control">
                <span asp-validation-for="NumberOfFreeSeats" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="NumberOfConnections"></label>
            </div>
            <div class="col-6">
                <input asp-for="NumberOfConnections" class="form-control">
                <span asp-validation-for="NumberOfConnections" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <a asp-action="BackToList" class="btn btn-success form-control">Back to List</a>
            </div>
            <div class="col-3">
                <button asp-action="Upsert"
                        type="submit" class="btn btn-primary form-control">
                    @(Model.FlightId != 0 ? "Update" : "Create")
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
