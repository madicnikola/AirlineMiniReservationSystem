@model FlightDetailsViewModel
@{
}

<br />
<h2 class="text-info">@(Model.Flight.FlightId != 0 ? "Edit" : "Create")</h2>
<br />
        <input type="hidden" asp-for="SearchFlightsViewModel.DirectFlight"/>
        <input id="DepartureCity" type="hidden" asp-for="SearchFlightsViewModel.DepartureCity"/>
        <input id="DestinationCity" type="hidden" asp-for="SearchFlightsViewModel.DestinationCity"/>
        <input id="DepartureDateTime" type="hidden" asp-for="SearchFlightsViewModel.DepartureDateTime"/>
<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Flight.FlightId != 0)
        {
            <input type="hidden" asp-for="Flight.FlightId" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Flight.DepartureCity"></label>
            </div>
            <div class="col-3">
                <select asp-for="Flight.DepartureCity" class="browser-default custom-select mb-4" id="select">
                    <option value="" disabled="" selected="">From City/Airport</option>
                    <option value="0">BEOGRAD</option>
                    <option value="1">NIS</option>
                    <option value="2">KRALJEVO</option>
                    <option value="3">PRISTINA</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Flight.DestinationCity"></label>
            </div>
            <div class="col-3">
                <select asp-for="Flight.DestinationCity" class="browser-default custom-select mb-4" id="select">
                    <option value="" disabled="" selected="">To City/Airport</option>
                    <option value="0">BEOGRAD</option>
                    <option value="1">NIS</option>
                    <option value="2">KRALJEVO</option>
                    <option value="3">PRISTINA</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Flight.DepartureDateTime"></label>
            </div>
            <div class="col-6">
                <input asp-for="Flight.DepartureDateTime" class="form-control">
                <span asp-validation-for="Flight.DepartureDateTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Flight.TotalNumberOfSeats"></label>
            </div>
            <div class="col-6">
                <input asp-for="Flight.TotalNumberOfSeats" class="form-control">
                <span asp-validation-for="Flight.TotalNumberOfSeats" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Flight.NumberOfFreeSeats"></label>
            </div>
            <div class="col-6">
                <input asp-for="Flight.NumberOfFreeSeats" class="form-control">
                <span asp-validation-for="Flight.NumberOfFreeSeats" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Flight.NumberOfConnections"></label>
            </div>
            <div class="col-6">
                <input asp-for="Flight.NumberOfConnections" class="form-control">
                <span asp-validation-for="Flight.NumberOfConnections" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <a href="javascript:history.go(-1)" class="btn btn-success form-control">Back</a>
            </div>
            <div class="col-3">
                <button asp-action="Upsert"
                        type="submit" class="btn btn-primary form-control">
                    @(Model.Flight.FlightId != 0 ? "Update" : "Create")
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
