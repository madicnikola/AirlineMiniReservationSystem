@model GroupedUserViewModel
  
<div class="col-12 border p-3">
        <form method="post">
            @if (Model.Users.Any())
            {
                <table class="table table-striped table-bordered" style="width:100%">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th></th>
                    </tr>

                    </thead>
                    @foreach (var item in Model.Users)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.User.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.User.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.User.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.User.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Role.NormalizedName)
                            </td>

                            <td>
                                <button asp-action="Delete" asp-route-id="@item.User.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-action="Edit" asp-route-id="@item.User.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Users available.</p>
            }
        </form>
    </div>