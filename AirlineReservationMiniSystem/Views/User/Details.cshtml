@model UserViewModel
@{
}

<br />
<h2 class="text-info">View User</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model != null)
        {
            <input type="hidden" asp-for="User.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Email" class="form-control" disabled>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Name" class="form-control" disabled> 
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Surname"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Surname" class="form-control" disabled>
                <span asp-validation-for="User.Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Role.Id">Role</label>
            </div>
            <div class="col-6">
                <select asp-for="Role.Id" class="browser-default custom-select mb-4" id="select" disabled>
                    <option value="1">ADMINISTRATOR</option>
                    <option value="2">AGENT</option>
                    <option value="3">CLIENT</option>
                </select>
                <span asp-validation-for="Role.Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
            <div class="col-3">
                <button asp-action="Edit" asp-route-id="@Model.User.Id" type="submit" class="btn btn-primary form-control">
                    Edit
                </button>
            </div>

        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
